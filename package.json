		"@types/chrome": "^0.0.268",
		"@types/node": "^22.10.5",
		"dotenv": "^16.6.1",
		"tsx": "^4.20.6",
		"typescript": "^5.6.3",
		"vite": "^5.4.11",
		"vite-plugin-web-extension": "^4.5.0",
		"vitest": "^2.1.8"
	}
}
